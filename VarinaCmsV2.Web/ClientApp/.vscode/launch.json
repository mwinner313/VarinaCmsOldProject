    "version": "0.1.0",
    "configurations": [

        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:3000",
            "port": 3000,
            "webRoot": "${workspaceRoot}"
       },
        {
            "type": "chrome",
            "port": 3000,
            "request": "attach",
            "name": "Attach Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}"
        }
    ]
}
